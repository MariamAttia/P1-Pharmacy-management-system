 void mainmenu(char character) {
 switch (character) {
     case'C':
     case 'c':
     cout << "for new customer press N \n";
     cout<<" for current customer press U\n\n";
    
  
     break;
     case'P':
     case'p':
     cout << "for new product press W\n";
     cout<<" for current product press E\n";
   
     break;
     case'S':
     case's':
     cout << "for new supplier press R\n";
     cout<<" for current supplier press T\n";
    
     break;
     default:
     cout<<"INVALIDE CHOICE,PLEASE TRY AGAIN";
     break;
    }}


