 tm* Ptr = localtime(&t);
 

 int seconds = (Ptr->tm_sec);
 int minutes =  (Ptr->tm_min) ;
 int hours =  (Ptr->tm_hour) ;
int dayofmonth =  (tPtr->tm_mday) ;
 int monthofyear =  (Ptr->tm_mon)+1 ;
int  year = (Ptr->tm_year)+1900;
 int weekday = (Ptr->tm_wday );
 int dayofyear =  (Ptr->tm_yday );



 

